@model IEnumerable<Smouhaclub.Models.TblMember>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    الاسم 
                </th>
                <th>
                    كود العضو
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JoinDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RenewalDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MembershipCost)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var id = PublicFunction.EncryptAndConvertToHex(item.MemberId.ToString());
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberEmail)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MemberId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.MemberId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.MemberId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div> Now Data </div>
}
